<%- include('../partials/header'); %>

<main class="main main-single container">
    <h2 class="main-h2 text-center"><%= name %></h2>
    <!-- <p class="text-white"> Player Name: <%= data.Player %></p> -->


    <!-- prev and next -->

    <section class="prev-and-next d-flex justify-content-around">
        <p class="prev">
            <% if(data.id > 1) { %>
                <a href="/players/<%= data.id - 1 %>" class="btn btn-large">Prev</a>
            <% } %>
        </p>
        <p class="next">
                <a href="/players/<%= data.id + 1 %>" class="btn btn-large">Next</a>
        </p>
      </section>
    <section class="section section-single d-flex justify-content-center">
        <div class="container">
            <div class="row">
                <div class="col-md-6 col-sm-12">
                    <img src="http://3.bp.blogspot.com/-n-waj24T0A8/TpAel_IpKYI/AAAAAAAACYo/g0bszmS5qv4/s1600/The-best-top-desktop-baseball-wallpapers-5-ball-wallpaper.jpeg" alt="Base Ball" class="img-fluid pb-5">
                    <p class="text-white"> Player Name: <%= data.Player %></p>
                    <p class=" text-white"> Year: <%= data.Year %></p>
                </div>
                <div class="col-md-6 col-sm-12">
                    <aside class="aside">
                        <h3 class="single-h3">More Info</h3>
                        <ul class="single-ul list-group">
                                <li class="list-group-item text-danger"> Bat Size: <%= data.Bats %></li>
                                <li class="list-group-item text-danger"> Age That Year: <%= data.AgeThatYear %></li>
                                <li class="list-group-item text-danger"> Number of Hits: <%= data.Hits %></li>
                        </ul>
                    </aside>
                </div>
            </div>
        </div>        
    </section>
</main>

<%- include('../partials/footer'); %>